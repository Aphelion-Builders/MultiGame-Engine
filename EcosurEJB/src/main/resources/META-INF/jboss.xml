<?xml version="1.0" encoding="UTF-8"?>
<jboss>
    <enterprise-beans>
        <session>
            <ejb-name>Registrar</ejb-name>
            <jndi-name>mx.ecosur.multigame.ejb.interfaces.RegistrarRemote</jndi-name>
        </session>
        <session>
            <ejb-name>SharedBoard</ejb-name>
            <jndi-name>mx.ecosur.multigame.ejb.interfaces.SharedBoardRemote</jndi-name>
        </session>
        <!-- Todo: Move configuration into MDB annotations -->
        <message-driven>
            <ejb-name>PlayerChangeListener</ejb-name>
            <destination-jndi-name>topic/MultiGame</destination-jndi-name>
            <activation-config>
                <activation-config-property>
                    <activation-config-property-name>destinationType</activation-config-property-name>
                    <activation-config-property-value>javax.jms.Topic</activation-config-property-value>
                </activation-config-property>
            </activation-config>
        </message-driven>
        <message-driven>
            <ejb-name>SuggestionListener</ejb-name>
            <destination-jndi-name>topic/MultiGame</destination-jndi-name>
             <activation-config>
                <activation-config-property>
                    <activation-config-property-name>destinationType</activation-config-property-name>
                    <activation-config-property-value>javax.jms.Topic</activation-config-property-value>
                </activation-config-property>
            </activation-config>
        </message-driven>
        <message-driven>
            <ejb-name>ChatListener</ejb-name>
            <destination-jndi-name>topic/MultiGame</destination-jndi-name>
            <activation-config>
                <activation-config-property>
                    <activation-config-property-name>destinationType</activation-config-property-name>
                    <activation-config-property-value>javax.jms.Topic</activation-config-property-value>
                </activation-config-property>
            </activation-config>
        </message-driven>
    </enterprise-beans>
</jboss>
